<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#000000"
        android:layout_width="50dp"
        android:layout_height="3dp">

    </LinearLayout>

    <TextView
        android:fontFamily="@font/poppins"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rekap Absen"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            app:cardCornerRadius="100dp"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:background="@drawable/mamat"
                android:layout_gravity="center"
                android:id="@+id/foto_dosen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nama_dosen"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arbi Pramana"
            android:gravity="center"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:textColor="#000"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

<!--            <TextView-->
<!--                android:gravity="center"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="12sp"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="No"-->
<!--                android:fontFamily="@font/poppins"-->
<!--                android:textColor="#000"/>-->

            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Tanggal Absen"
                android:fontFamily="@font/poppins"
                android:textColor="#000"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tanggal_rekap"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Tanggal Absen"
            android:fontFamily="@font/poppins"
            android:textColor="#000"/>


    </LinearLayout>

</LinearLayout>