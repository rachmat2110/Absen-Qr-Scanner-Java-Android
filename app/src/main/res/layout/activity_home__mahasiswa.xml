<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Home_Mahasiswa">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="5dp"
        android:orientation="horizontal">

        <ImageView
            android:onClick="back_fragment"
            android:layout_marginLeft="25dp"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_"/>

        <TextView
            android:layout_marginRight="55dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:layout_gravity="center"
            android:text="Absensi"
            android:gravity="center"
            android:fontFamily="@font/poppins"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="24dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_homepage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/nama_mahasiswa"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selamat Datang, \nNoer Rachmat Octavianto"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/foto_mahasiswa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="3dp"
                android:background="@drawable/rd_mahasiswa"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:textAlignment="textStart"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor Mahasiswa"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/npm_mahasiswa"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="54417526"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:textAlignment="textStart"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kelas"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/kelas_mahasiswa"
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3IA18"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:textAlignment="textStart"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mahasiswa"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:textAlignment="textStart"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Jurusan"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="Teknik Informatika"
                            android:fontFamily="@font/poppins"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:onClick="absen_mahasiswa"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="#fff"
                android:elevation="3dp"
                >

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/search"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Lihat rekap absen"
                    android:textColor="#000"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:textSize="14sp"/>

            </LinearLayout>

            <LinearLayout
                android:onClick="to_barcode"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:background="@drawable/grafik_"
                >

                <ImageView
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/barcode"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Barcode"
                    android:textColor="#fff"
                    android:fontFamily="@font/poppins"
                    android:gravity="center"
                    android:textSize="14sp"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>